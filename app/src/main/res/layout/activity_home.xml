<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njitdev.sa_android.home.HomeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="登录"
        app:layout_constraintLeft_toLeftOf="@+id/buttonHomeSchoolAnnouncement"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeSchoolAnnouncement" />

    <Button
        android:id="@+id/buttonHomeMessageBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="留言板"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonHomeSchoolAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="校内通知"
        app:layout_constraintLeft_toRightOf="@+id/buttonHomeMessageBoard"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/buttonHomeMessageBoard"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/buttonHomeTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Test"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeMessageBoard"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonHomeMessageBoard"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeTest"/>

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="图书馆"
        app:layout_constraintLeft_toRightOf="@+id/buttonHomeSchoolAnnouncement"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/buttonHomeMessageBoard"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/lblSessionID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:text="session_id"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
