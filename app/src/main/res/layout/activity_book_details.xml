<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njitdev.sa_android.library.BookDetailsActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="    "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAuthor"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="    "
        app:layout_constraintLeft_toLeftOf="@+id/lblTitle"
        app:layout_constraintRight_toLeftOf="@+id/lblYear"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

    <TextView
        android:id="@+id/lblPublisher"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="    "
        app:layout_constraintRight_toRightOf="@+id/lblTitle"
        app:layout_constraintTop_toTopOf="@+id/lblAuthor" />

    <TextView
        android:id="@+id/lblYear"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="    "
        app:layout_constraintRight_toLeftOf="@+id/lblPublisher"
        app:layout_constraintTop_toTopOf="@+id/lblAuthor" />

    <TextView
        android:id="@+id/lblInventory"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:text="    "
        app:layout_constraintLeft_toLeftOf="@+id/lblAuthor"
        app:layout_constraintTop_toBottomOf="@+id/lblAuthor" />

    <TextView
        android:id="@+id/lblAvailable"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="    "
        app:layout_constraintLeft_toRightOf="@+id/lblInventory"
        app:layout_constraintTop_toTopOf="@+id/lblInventory" />

    <TextView
        android:id="@+id/lblAcqNum"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:text="    "
        app:layout_constraintLeft_toLeftOf="@+id/lblYear"
        app:layout_constraintRight_toRightOf="@+id/lblPublisher"
        app:layout_constraintTop_toTopOf="@+id/lblInventory" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorLightGray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblInventory" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="馆藏详情"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintLeft_toLeftOf="@+id/lblTitle" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/pbDetail"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@+id/listView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/listView"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/listView"
        app:layout_constraintVertical_bias="0.494"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
